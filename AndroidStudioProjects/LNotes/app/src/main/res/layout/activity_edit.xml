    <?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Note Title"
               android:layout_margin="16dp"
                android:textSize="20sp"
                android:textStyle="bold"

                android:background="@android:color/transparent"
                android:id="@+id/setTitleView"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="16dp">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:text="NoteBook"
                    android:id="@+id/notebook"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="del"
                    android:id="@+id/delView"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_height="1dp"
                android:background="#D3D3D3"
                >

            </View>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
    android:layout_margin="16dp"
                android:hint="What is on your mind?"
                android:textAlignment="viewStart"
                android:background="@android:color/transparent"
                android:id="@+id/setContentView"/>


        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
             android:layout_margin="16dp"
            android:src="@drawable/ic_action_click"
            android:id="@+id/saveView"/>

    </RelativeLayout>